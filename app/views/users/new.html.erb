<h1>New User</h1>
<%= form_with model: @user do |form| %>
    <div>
        <%= form.label "Username: " %>
        <%= form.text_field :username %>
    </div>
    <div>
        <%= form.label "Password: " %>
        <%= form.password_field :password %>
    </div>
    <div>
        <%= form.label "Password confirmation: " %>
        <%= form.password_field :password_confirmation %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>